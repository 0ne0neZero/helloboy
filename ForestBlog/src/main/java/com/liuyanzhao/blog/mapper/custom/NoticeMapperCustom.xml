<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.liuyanzhao.blog.mapper.custom.NoticeMapperCustom" >


    <sql id="notice_table_all_columns">
        notice_id,
        notice_title,
        notice_content,
        notice_order,
        notice_create_time,
        notice_update_time,
        notice_status
      </sql>

    <select id="countNotice" resultType="Integer">
        SELECT COUNT(*) FROM `notice`
        <where>
            <if test="status!=null">
                menu_status=#{status}
            </if>
        </where>
    </select>

    <!--获取公告列表-->
    <select id="listNotice" resultType="com.liuyanzhao.blog.entity.custom.NoticeCustom">
        SELECT
        <include refid="notice_table_all_columns"/>
        FROM  `notice`
        <where>
            <if test="status!=null">
                notice_status=#{status}
            </if>
        </where>
        ORDER BY notice_status ASC, notice_order DESC, notice_id ASC
    </select>




</mapper>


